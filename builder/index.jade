html(ng-app="kcd.site",lang="en")
  head
    title(ng-bind="title") KCD Module
    meta(name="title",content="KCD Module")
    meta(name="description" content="Angular components that I have made and think are useful.")
    meta(name="keywords" content="angularjs, angular, angular directives, angular services, angular filters")
    meta(name="author" content="Kent C. Dodds")
    meta(charset="UTF-8")
    script.
      window.KCD = {};
      window.KCD.BASE_URL = '#{BASE_URL}';
      window.KCD.onDev = #{onDev};
    if onDev
      script.
        console.log('on development');

    // load stylsheets
    for href in stylesheets
      link(rel="stylesheet", href="#{href}")

    // load critical scripts
    for script in topScripts
      script(src="#{script}")

  body
    div(id="wrap",ui-view="")
    div(id="footer")
      div(class="container") Created with&nbsp;
        i(class="fa fa-heart")
        |  by&nbsp;
        a(href="http://twitter.com/kentcdodds") Kent C. Dodds

    // load other scripts
    for script in scripts
      script(src="#{script}")
